@{
    ViewData["Title"] = "Adicionar Morador";
}

@section breadcrumb {
    <h6 class="h2 text-white d-inline-block mb-0">Moradores</h6>
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i></a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dweller" asp-action="Index">Moradores</a></li>
            <li class="breadcrumb-item active" aria-current="page">Adicionar</li>
        </ol>
    </nav>
}
<div class="col-md-12">
    <form method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="card-wrapper">
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-md-6 float-left">
                                    <h3 class="mb-0">Perfil </h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-default alert-dismissible fade show" role="alert">
                                <span class="alert-icon"><i class="ni ni-send"></i></span>
                                <span class="alert-text">A <strong>SENHA</strong> do morador será enviada através do <strong>EMAIL</strong> cadastrado</span>
                            </div>
                            <hr class="my-4" />
                            <h6 class="heading-small text-muted mb-4">
                                INFORMAÇÕES DO MORADOR
                            </h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">Nome</label>
                                            <input type="text" id="input-first-name" class="form-control" placeholder="Nome">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">Sobrenome</label>
                                            <input type="text" id="input-last-name" class="form-control" placeholder="Sobrenome">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">Data de Nascimento</label>
                                            <input class="form-control datepicker" placeholder="Selecione a Data" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">Sexo</label>
                                            <select class="form-control" data-toggle="select">
                                                <option>Selecionar</option>
                                                <option>Feminino</option>
                                                <option>Masculino</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">RG</label>
                                            <input class="form-control" placeholder="RG" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">CPF</label>
                                            <input type="number" id="input-email" class="form-control cpf" placeholder="CPF">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4" />

                            <h6 class="heading-small text-muted mb-4">
                                INFORMAÇÕES DE CONTATO
                            </h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6" id="dynamicDivTel">
                                        <label class="form-control-label" for="">Telefone ou Celular</label>
                                        <div class="input-group form-group">
                                            <input type="text" class="form-control" placeholder="Telefone ou Celular">
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button" id="addTel"><i class="fas fa-plus"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" id="dynamicDivEmail">
                                        <label class="form-control-label" for="">Email</label>
                                        <div class="input-group form-group">
                                            <input type="text" class="form-control" placeholder="Email">
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button" id="addEmail"><i class="fas fa-plus"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4" />

                            <h6 class="heading-small text-muted mb-4">
                                INFORMAÇÕES DO CONDOMÍNIO
                            </h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">Nome do Condomínio</label>
                                            <input class="form-control" placeholder="Nome do Condomínio" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">Torre</label>
                                            <input class="form-control" placeholder="Torre" type="text">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="">Número do apartamento</label>
                                            <input class="form-control" placeholder="Número do Apartamento" type="number">
                                        </div>
                                    </div>
                                    <div class="col-lg-6" id="dynamicDivGarage">
                                        <label class="form-control-label" for="">Número da Vaga de Garagem</label>
                                        <div class="input-group form-group">
                                            <input type="text" class="form-control" placeholder="Número da Vaga de Garagem">
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button" id="addGarage"><i class="fas fa-plus"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4" />

                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <a asp-area="Admin" asp-controller="Dweller" asp-action="Index" class="btn btn-secondary float-left">Cancelar</a>
                                    </div>
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-success float-right">Cadastrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-wrapper">
                        <div class="card-header">
                            <h3 class="mb-0">Foto</h3>
                        </div>
                        <div class="card-body">
                            <div class="dropzone dropzone-single mb-3" data-toggle="dropzone" data-dropzone-url="http://">
                                <div class="fallback">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="projectCoverUploads">
                                        <label class="custom-file-label" for="projectCoverUploads">Escolha o Arquivo</label>
                                    </div>
                                </div>
                                <div class="dz-preview dz-preview-single">
                                    <div class="dz-preview-cover">
                                        <img class="dz-preview-img" src="..." alt="..." data-dz-thumbnail>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
