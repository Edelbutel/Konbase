@model List<ApplicationCondominium>;

@{
    ViewData["Title"] = "Condomínio";
}

@section breadcrumb {
    <h6 class="h2 text-white d-inline-block mb-0">Condomínio</h6>
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i></a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Condominium" asp-action="Index">Condomínio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>
}

@section css {
    <link href="~/lib/dataTables-1.10.19/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/dataTables-1.10.19/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/dataTables-1.10.19/datatables.net-select-bs4/css/select.bootstrap4.min.css" rel="stylesheet" />
}
<div class="row card-wrapper">
    <div class="col-md-12">
        <a asp-area="Admin" asp-controller="Condominium" asp-action="Add" class="btn btn-success">Adicionar Condomínio</a>
    </div>
</div>

<div class="row card-wrapper condominium">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <h3 class="mb-0">Condomínios</h3>
            </div>
            <div class="table-responsive py-4">
                <table class="table table-flush" id="datatable-basic">
                    <thead class="thead-light">
                        <tr>
                            <th>Razão Social</th>
                            <th>Nome Fantasia</th>
                            <th>CNPJ</th>
                            <th>Data de Construção</th>
                            <th>Tipo de Condomínio</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Razão Social</th>
                            <th>Nome Fantasia</th>
                            <th>CNPJ</th>
                            <th>Data de Construção</th>
                            <th>Tipo de Condomínio</th>
                            <th>Ação</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var condominium in Model)
                        {
                        <tr>
                            <td>@condominium.CompanyName</td>
                            <td>@condominium.FantasyName</td>
                            <td>@condominium.Cnpj</td>
                            <td>@condominium.ConstructionDate</td>
                            <td>@condominium.CondominiumType</td>
                            <td class="table-actions">
                                <a asp-area="Admin" asp-controller="Condominium" asp-action="Edit?id=@condominium.Id" class="table-action" data-toggle="tooltip" data-original-title="Editar Produto">
                                    <i class="fas fa-user-edit"></i>
                                </a> 
                                <a href="#!" class="table-action table-action-delete" data-toggle="tooltip" data-original-title="Deletar Condomínio">
                                    <span data-toggle="modal" data-target=".deleteClient" data-client="@condominium.Id" data-name="@condominium.FantasyName"><i class="fas fa-trash"></i></span>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section script {
    <script src="~/lib/dataTables-1.10.19/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/dataTables-1.10.19/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/dataTables-1.10.19/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/dataTables-1.10.19/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
    <script src="~/lib/dataTables-1.10.19/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/lib/dataTables-1.10.19/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/lib/dataTables-1.10.19/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/lib/dataTables-1.10.19/datatables.net-select/js/dataTables.select.min.js"></script>
}
